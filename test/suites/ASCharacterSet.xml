<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
  
<suite name="Character Sets">

    <test name="Character Set Reference">
		<parameter name="srcDir" value="test/data/character-sets"/>
		<parameter name="dstDir" value="test/data/character-sets"/>
		<classes>
      		<class name="com.flagstone.translate.test.ASCharacterSetTest">
      			<methods>
      				<include name="toText"/>
      			</methods>
      		</class>
		</classes>
  	</test>  	

    <test name="Character Set">
		<parameter name="srcDir" value="test/data/character-sets"/>
		<parameter name="dstDir" value="test/results/ASParser/character-sets"/>
		<classes>
      		<class name="com.flagstone.translate.test.ASCharacterSetTest">
      			<methods>
      				<include name="compile"/>
      			</methods>
      		</class>
		</classes>
  	</test>  	

    <test name="Convert Character Set Results To Text">
		<parameter name="srcDir" value="test/results/ASParser/character-sets"/>
		<parameter name="dstDir" value="test/results/ASParser/character-sets"/>
		<classes>
      		<class name="com.flagstone.translate.test.ASCharacterSetTest">
      			<methods>
      				<include name="toText"/>
      			</methods>
      		</class>
		</classes>
  	</test>  	

</suite>

