<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
  
<suite name="Compile">

    <test name="Compile AS1">
		<parameter name="srcDir" value="test/data/as1"/>
		<parameter name="dstDir" value="test/results/ASParser/as1"/>
		<classes>
      		<class name="com.flagstone.translate.test.ASParserTest">
      			<methods>
      				<include name="compile"/>
      			</methods>
      		</class>
		</classes>
  	</test>  	

    <test name="Convert AS1 Results To Text">
		<parameter name="srcDir" value="test/results/ASParser/as1"/>
		<parameter name="dstDir" value="test/results/ASParser/as1"/>
		<classes>
      		<class name="com.flagstone.translate.test.ASParserTest">
      			<methods>
      				<include name="toText"/>
      			</methods>
      		</class>
		</classes>
  	</test>  	

    <test name="Compile Character Sets">
		<parameter name="srcDir" value="test/data/character-sets"/>
		<parameter name="dstDir" value="test/results/ASParser/character-sets"/>
		<classes>
      		<class name="com.flagstone.translate.test.ASParserTest">
      			<methods>
      				<include name="compile"/>
      			</methods>
      		</class>
		</classes>
  	</test>  	

    <test name="Convert Character Set Results To Text">
		<parameter name="srcDir" value="test/results/ASParser/character-sets"/>
		<parameter name="dstDir" value="test/results/ASParser/character-sets"/>
		<classes>
      		<class name="com.flagstone.translate.test.ASParserTest">
      			<methods>
      				<include name="toText"/>
      			</methods>
      		</class>
		</classes>
  	</test>  	
</suite>

